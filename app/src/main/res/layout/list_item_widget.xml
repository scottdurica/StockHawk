<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_item_container"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingStart="8dp"
    android:paddingRight="8dp"
    android:paddingEnd="8dp">
    <TextView
        android:id="@+id/tv_widget_stock_symbol"
        style="@style/StockSymbolTextStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        tools:text="GOOG"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        >
        <TextView
            android:id="@+id/tv_widget_bid_price"
            style="@style/BidPriceTextStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/list_item_widget_bid_price_padding_left_right"
            android:paddingEnd="@dimen/list_item_widget_bid_price_padding_left_right"
            android:paddingStart="@dimen/list_item_widget_bid_price_padding_left_right"
            android:paddingLeft="@dimen/list_item_widget_bid_price_padding_left_right"
            tools:text="1000.00"
            />
        <TextView
            android:id="@+id/tv_widget_change"
            style="@style/PercentChangeTextStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/list_item_widget_change_padding_left_right"
            android:paddingStart="@dimen/list_item_widget_change_padding_left_right"
            android:paddingRight="@dimen/list_item_widget_change_padding_left_right"
            android:paddingEnd="@dimen/list_item_widget_change_padding_left_right"
            tools:text="100%"
            />
    </LinearLayout>
</LinearLayout>